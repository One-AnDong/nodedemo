html
  head
    title= 王者荣耀管理器
    link(rel="stylesheet" href="/static/css/bootstrap.css")
  body 
  header
    div(class="page-header container")
      h1 王者荣耀 
        small 英雄管理器
  div(class="container hero-list")
    a(class="btn btn-success pull-right" href="") 添加英雄
    table(class="table table-hover")
      thead
        th 编号
        th 名称
        th 性别
        th 生日
        th 操作
      tbody
        each val in list
          tr
            td=val.id
            td=val.name 
            td=val.gender 
            td=val.birthday
            td
              a(href="") 查看
              |
              |
              a(href="") 编辑
              |
              |
              a(class="delete" href="") 删除
     
  script(src="/static/js/jquery.js")
  script(src="/static/js/bootstrap.js")
  script(src="/static/js/index.js")


